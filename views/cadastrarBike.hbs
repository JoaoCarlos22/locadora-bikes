<div class="container mt-5">
    <h1 class="text-center">Cadastrar Bicicleta</h1>
    <form action="/bicicleta/cadastrar" method="POST" class="mt-4">
        <div class="mb-3 w-50 mx-auto">
            <label for="cor" class="form-label">Cor</label>
            <input type="text" class="form-control" id="cor" name="cor" placeholder="Digite a cor da bicicleta" required>
        </div>
        <div class="mb-3 w-50 mx-auto">
            <label for="marca" class="form-label">Marca</label>
            <input type="text" class="form-control" id="marca" name="marca" placeholder="Digite a marca da bicicleta" required>
        </div>
        <div class="mb-3 w-50 mx-auto">
            <label for="modelo" class="form-label">Modelo</label>
            <input type="text" class="form-control" id="modelo" name="modelo" placeholder="Digite o modelo da bicicleta" required>
        </div>
        <div class="mb-3 w-50 mx-auto">
            <label for="observacao" class="form-label">Observação</label>
            <select class="form-select" name="observacao" id="observacao" required>
                <option value="" disabled selected>Selecione a observação</option>
                <option value="Disponível">Disponível</option>
                <option value="Em manutenção">Em manutenção</option>
            </select>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-25">Cadastrar</button>
        </div>
    </form>
</div>