<div class="container mt-5">
    <h1 class="text-center">Lista de Clientes</h1>
    {{#if clientes.length}}
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th>Foto</th>
                </tr>
            </thead>
            <tbody>
                {{#each clientes}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.nome}}</td>
                        <td>{{this.cpf}}</td>
                        <td>{{this.fone}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <img src="/imagens/{{this.foto}}" alt="Foto de {{this.nome}}" class="img-thumbnail" style="width: 100px; height: auto;">
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="alert alert-warning text-center mt-4" role="alert">
            Nenhum cliente cadastrado.
        </div>
    {{/if}}
    <div class="text-center mt-4">
        <a href="/cliente/cadastrar" class="btn btn-primary">Cadastrar Novo Cliente</a>
    </div>
    <div class="text-center mt-2">
        <a href="/bicicleta/disponiveis" class="btn btn-success{{#unless clientes.length}} disabled{{/unless}}" {{#unless clientes.length}}aria-disabled="true" tabindex="-1"{{/unless}}>Alugar Bicicletas</a>
    </div>
</div>