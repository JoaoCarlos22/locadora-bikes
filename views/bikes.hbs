<div class="container mt-5">
    <h1 class="text-center">Lista de Bicicletas</h1>
    {{#if bikes.length}}
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Cor</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Observação</th>
                </tr>
            </thead>
            <tbody>
                {{#each bikes}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.cor}}</td>
                        <td>{{this.marca}}</td>
                        <td>{{this.modelo}}</td>
                        <td>{{this.observacao}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="alert alert-warning text-center mt-4" role="alert">
            Nenhuma bicicleta cadastrada.
        </div>
    {{/if}}
    <div class="text-center mt-4">
        <a href="/bicicleta/cadastrar" class="btn btn-primary">Cadastrar Nova Bicicleta</a>
    </div>
    <div class="text-center mt-3">
        <a href="/bicicleta/disponiveis" class="btn btn-success{{#unless bikes.length}} disabled{{/unless}}" role="button" aria-disabled="{{#unless bikes.length}}true{{/unless}}">
            Visualizar Bicicletas Disponíveis
        </a>
    </div>
</div>